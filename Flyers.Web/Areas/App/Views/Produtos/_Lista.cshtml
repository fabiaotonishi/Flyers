@model IEnumerable<ProdutoEntity>

<div id="lista-produto" class="row">
    <div class="col-md-12">
        <div class="table-toolbar mr-2 mb-3">
            <a data-action="editar-lista" asp-action="Exibe" asp-controller="Produtos" class="btn btn-primary">
                <i class="fa-fw fa fa-edit"></i>
            </a>
        </div>
        <table class="table table-striped rounded bg-white">
            <thead>
                <tr class="text-center">
                    <th data-field="@Html.DisplayNameFor(model => model.Categoria)"
                        data-sortable="true">
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>
                    <th data-field="Produto"
                        data-sortable="true"
                        class="w-50">
                        Produto
                    </th>
                    <th data-field="@Html.DisplayNameFor(model => model.Preco)"
                        data-sortable="true">
                        @Html.DisplayNameFor(model => model.Preco)
                    </th>
                    <th data-field="@Html.DisplayNameFor(model => model.Inativo)"
                        data-sortable="true">
                        @Html.DisplayNameFor(model => model.Inativo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var produto in Model)
                {
                    <tr>
                        <td class="text-left">
                            @Html.DisplayFor(modelItem => produto.Categoria.Nome)
                        </td>
                        <td class="text-left">
                            @Html.DisplayFor(modelItem => produto.Nome)
                        </td>
                        <td class="text-right">
                            @Html.DisplayFor(modelItem => produto.Preco)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => produto.Inativo)
                        </td>
                        <td class="text-right">
                            <div class="btn-group" role="group">
                                <a data-action="editar-lista" asp-action="Exibe" asp-controller="Produtos" asp-route-id="@produto.Id" class="btn btn-primary">
                                    <i class="fa-fw fa fa-edit"></i>
                                </a>
                                <a data-action="apagar-modal" asp-action="Apaga" asp-controller="Produtos" asp-route-id="@produto.Id" class="btn btn-danger">
                                    <i class="fa fa-eraser"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>