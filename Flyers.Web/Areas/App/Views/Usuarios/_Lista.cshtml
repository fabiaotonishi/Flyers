@model IEnumerable<UsuarioEntity>

<div id="lista-usuario" class="row">
    <div class="col-md-12">
        <div class="table-toolbar mr-2 mb-3">
            <a data-action="editar-lista" asp-action="Exibe" asp-controller="Usuarios" class="btn btn-primary">
                <i class="fa-fw fa fa-edit"></i>
            </a>
        </div>
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th data-field="@Html.DisplayNameFor(model => model.Perfil)"
                        data-sortable="true">
                        @Html.DisplayNameFor(model => model.Perfil)
                    </th>
                    <th data-field="Usuario"
                        data-sortable="true"
                        class="w-50">
                        Usuário
                    </th>
                    <th data-field="@Html.DisplayNameFor(model => model.Telefone)"
                        data-sortable="true">
                        @Html.DisplayNameFor(model => model.Telefone)
                    </th>
                    <th data-field="@Html.DisplayNameFor(model => model.Inativo)"
                        data-sortable="true">
                        @Html.DisplayNameFor(model => model.Inativo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td class="text-left">
                            @Html.DisplayFor(modelItem => usuario.Perfil)
                        </td>
                        <td class="text-left">
                            @Html.DisplayFor(modelItem => usuario.Nome)
                        </td>
                        <td class="text-right">
                            @Html.DisplayFor(modelItem => usuario.Telefone)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => usuario.Inativo)
                        </td>
                        <td class="text-right">
                            <div class="btn-group" role="group">
                                <a data-action="editar-lista" asp-action="Exibe" asp-controller="Usuarios" asp-route-id="@usuario.Id" class="btn btn-primary">
                                    <i class="fa-fw fa fa-edit"></i>
                                </a>
                                <a data-action="apagar-modal" asp-action="Apaga" asp-controller="Usuarios" asp-route-id="@usuario.Id" class="btn btn-danger">
                                    <i class="fa-fw fa fa-eraser"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

