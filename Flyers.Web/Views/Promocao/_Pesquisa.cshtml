@model Busca

<form id="pesquisa-promocao" asp-action="Pesquisa" asp-controller="Promocao" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group">
            <input asp-for="Index" type="hidden" />
            <input asp-for="Exibe" type="hidden" class="form-control" />
        </div>
        <div class="form-group col-12 col-md-4">
            <label asp-for="Pesquisa" class="control-label small"></label>
            <div class="input-group">
                <input asp-for="Pesquisa" class="form-control" aria-describedby="botao-pesquisa" />
                <div class="input-group-append">
                    <button type="submit" data-action="pesquisar" class="btn btn-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
            <span asp-validation-for="Pesquisa" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-3 ml-auto">
            <label asp-for="Ordem" class="control-label small"></label>
            <select asp-for="Ordem" asp-items="Model.Ordens" class="form-control"></select>
        </div>
        <div class="form-group col-12 col-md-3">
            <label class="control-label small">Filtro</label>
            <select name="categoria" asp-items="@ViewBag.Categorias" class="form-control">
                <option value="0">Todas</option>
            </select>
        </div>
    </div>
</form>
