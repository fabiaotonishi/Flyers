@model IEnumerable<ProdutoEntity>

<div id="destaque-produto" class="row row-cols-1 my-5">
    <div class="col" data-aos="fade-down">
        <div class="text-center">
            <h3 class="h1 mb-3 font-weight-bold">
                <strong class="d-block h5 text-uppercase">Produtos</strong>
                Em destaques
            </h3>
        </div>
    </div>
    <div class="col" data-aos="fade-up">
        @if (Model.Count() > 0)
        {
            <div class="d-flex flex-column justify-content-center align-items-center">
                <div class="owl-carousel owl-theme owl-loaded owl-drag list-group">
                    @foreach (var produto in Model)
                    {
                        <div class="item animated--fade-in rounded">
                            <a asp-action="Detalhes" asp-controller="Produtos" asp-route-id="@produto.Id" data-action="exibir" class="list-group-item list-group-item-action border-0 py-3">
                                @if (produto.Imagem != null)
                                {
                                    <img class="owl-lazy img-fluid rounded" data-src="@produto.Imagem.Url" alt="@produto.Nome">
                                }
                                <strong class="d-inline-block small text-muted text-uppercase mb-2">@produto.Categoria.Nome</strong>
                                <h4 class="h4 font-weight-bold mb-0">@produto.Nome</h4>
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

